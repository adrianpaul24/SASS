@page
@model SASS.Pages.Reminders.IndexModel
@{
    ViewData["Title"] = "Reminders";
}

<h2>Reminders</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Appointment Title</th>
            <th>Client Name</th>
            <th>Type</th>
            <th>Date</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var reminder in Model.RemindersList)
        {
            <tr>
                <td>@reminder.Appointment.Title</td>
                <td>@reminder.Appointment.Name</td>
                <td>@reminder.Type</td>
                <td>@reminder.Date.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@reminder.Status</td>
                <td>
                    <a class="btn btn-sm btn-info" asp-page="/Reminders/Edit" asp-route-id="@reminder.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
